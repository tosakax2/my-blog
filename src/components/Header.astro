---
import { SITE_TITLE } from "../config";
---

<header class="sticky top-0 left-0 w-full z-[100] bg-[var(--color-bg)] border-b border-[var(--color-border)]">
  <div class="flex items-center justify-between max-w-3xl mx-auto h-12 px-4 sm:px-8">
    <a  
    href="/"  
    class="flex items-center font-bold text-lg no-underline text-[var(--color-text)]"
    >
      <div  
        class="w-9 h-9 mr-1"
        style="
          mask: url(/images/site-icon.svg) no-repeat center / contain;
          -webkit-mask: url(/images/site-icon.svg) no-repeat center / contain;
          background-color: var(--color-text);
        "
        role="img"
        aria-label="Site Icon"
      />
      { SITE_TITLE }
    </a>
    <nav>
      <ul class="flex items-center gap-4 font-medium text-sm m-0 p-0 list-none">
        <li>
          <a
            href="/blog/page/1"
            class="text-[var(--color-text)] text-sm no-underline transition-colors duration-200 hover:text-[var(--color-accent)]">
            Blog
          </a>
        </li>
        <li>
          <a
            href="/terms"
            class="text-[var(--color-text)] text-sm no-underline transition-colors duration-200 hover:text-[var(--color-accent)]">
            Terms
          </a>
        </li>
        <li>
          <a
            href="/blog/about"
            class="text-[var(--color-text)] text-sm no-underline transition-colors duration-200 hover:text-[var(--color-accent)]">
            About
          </a>
        </li>
        <li>
          <button
            id="theme-toggle"
            type="button"
            aria-label="Toggle dark mode"
            class="material-symbols-outlined hover:cursor-pointer align-middle text-[var(--color-text)] text-sm ml-2 transition-colors duration-200 hover:text-[var(--color-accent)]">
            dark_mode
          </button>
          <script is:inline>
            try {
              const btn = document.currentScript?.previousElementSibling;
              if (btn) {
                btn.textContent = document.documentElement.classList.contains('dark')
                  ? 'light_mode'
                  : 'dark_mode';
              }
            } catch (err) {}
          </script>
        </li>
      </ul>
    </nav>
  </div>
</header>
