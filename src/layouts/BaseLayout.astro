---
import { LANGUAGE , SITE_TITLE} from "../config";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { pageTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang={LANGUAGE}>
  <head>
    <script is:inline>
      try {
        const saved = localStorage.getItem('theme');
        if (saved === 'light') {
          document.documentElement.classList.remove('dark');
        } else if (saved === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.classList.add('dark');
        }
      } catch (err) {}
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css" />
    <title>{pageTitle} - {SITE_TITLE}</title>
  </head>
  <body class="min-h-screen flex flex-col font-sans bg-[var(--color-bg)] text-[var(--color-text)]">
    <Header />
    <main class="flex-1 flex flex-col">
      <slot />
    </main>
    <Footer />
    <script type="module" src="/js/theme-toggle.js"></script>
    <script type="module" src="/js/scramble-title.js"></script>
    <script type="module" src="/js/smooth-scroll.js"></script>
  </body>
</html>
